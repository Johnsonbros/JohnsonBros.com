{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./client/src/*"],
      "@johnsonbros/unified-cards": ["./shared/unified-cards/index.ts"],
      "@johnsonbros/unified-cards/*": ["./shared/unified-cards/*"]
    }
  },
  "include": ["src"]
}

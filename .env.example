# Database Configuration
DATABASE_URL=postgresql://user:password@host:port/database

# Housecall Pro API Configuration
HOUSECALL_PRO_API_KEY=your_housecall_pro_api_key_here
# Alternative API key (if using company-specific key)
HCP_COMPANY_API_KEY=your_company_api_key_here
# Webhook secret for signature verification
HOUSECALL_WEBHOOK_SECRET=your_webhook_secret_here

# Google Maps Configuration (Required for map features)
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Admin Configuration
ADMIN_DEFAULT_PASSWORD=change_this_secure_password_123!

# Google Ads Configuration (Optional - for ads automation)
GOOGLE_ADS_DEV_TOKEN=
GOOGLE_ADS_CLIENT_ID=
GOOGLE_ADS_CLIENT_SECRET=
GOOGLE_ADS_REFRESH_TOKEN=
GOOGLE_ADS_MANAGER_ID=
GOOGLE_ADS_ACCOUNT_ID=

# Server Configuration
NODE_ENV=production
PORT=5000

# Session Configuration (Optional - defaults provided)
SESSION_SECRET=generate_a_secure_random_string_here
SESSION_DURATION=86400000

# Security Headers (Optional)
CORS_ORIGIN=https://yourdomain.com
SECURE_COOKIES=true
TRUST_PROXY=true

# Monitoring (Optional but recommended)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
LOGTAIL_SOURCE_TOKEN=
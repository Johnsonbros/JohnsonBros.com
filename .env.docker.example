# ==============================================
# Johnson Bros - Docker Environment Configuration
# ==============================================
# This file contains environment variables for Docker deployment.
# Copy your actual API keys from .env to make this work.

# ==============================================
# Database (Docker PostgreSQL)
# ==============================================
DATABASE_URL=postgresql://johnsonbros:johnsonbros@db:5432/johnsonbros
PGDATABASE=johnsonbros
PGHOST=db
PGPORT=5432
PGUSER=johnsonbros
PGPASSWORD=johnsonbros

# ==============================================
# Core Configuration
# ==============================================
NODE_ENV=development
SESSION_SECRET=your-session-secret-here

# ==============================================
# HousecallPro API
# ==============================================
HOUSECALL_PRO_API_KEY=your-housecall-api-key
HOUSECALL_COMPANY_ID=your-company-id
HCP_API_BASE=https://api.housecallpro.com
HOUSECALL_WEBHOOK_SECRET=your-webhook-secret

# ==============================================
# Google Services
# ==============================================
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
GOOGLE_PLACES_API_KEY=your-places-api-key

# ==============================================
# OpenAI
# ==============================================
OPENAI_API_KEY=your-openai-api-key

# ==============================================
# Twilio
# ==============================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+15551234567
OTP_SENDER_NAME=Johnson Bros Plumbing
TWILIO_NOTIFY_TECH_PHONE=+15551234567
TWILIO_NOTIFY_ADMIN_PHONE=+15551234567

# ==============================================
# Company Settings
# ==============================================
COMPANY_TZ=America/New_York
DEFAULT_REGION=US
DEFAULT_DISPATCH_EMPLOYEE_IDS=your-employee-id

# ==============================================
# Admin Account
# ==============================================
SUPER_ADMIN_EMAIL=admin@example.com
SUPER_ADMIN_PASSWORD=change-this-password
SUPER_ADMIN_NAME=Admin User

# ==============================================
# Security
# ==============================================
INTERNAL_SECRET=your-internal-secret
INTERNAL_ADMIN_TOKEN=your-admin-token
CORS_ORIGIN=http://localhost:5000,http://localhost:3001
TRUST_PROXY=false
SECURE_COOKIES=false

# ==============================================
# Ports
# ==============================================
PORT=5000
MCP_PORT=3001

# ==============================================
# MCP Configuration (for app container)
# ==============================================
MCP_URL=http://mcp:3001
SKIP_MCP_SPAWN=true

# ==============================================
# Logging
# ==============================================
LOG_LEVEL=info
DEBUG_LOGS=false
